<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.scoula.asset.mapper.CategoryMapper">
    <select id="getAllCategories" resultType="org.scoula.asset.domain.CategoryVO">
        SELECT code, name FROM category
    </select>

    <select id="getCategoryByCode" resultType="org.scoula.asset.domain.CategoryVO">
        SELECT code, name FROM category WHERE code = #{code}
    </select>

    <insert id="insertCategory">
        INSERT INTO category (code, name) VALUES (#{code}, #{name})
    </insert>

    <update id="updateCategory">
        UPDATE category SET name = #{name} WHERE code = #{code}
    </update>

    <delete id="deleteCategory">
        DELETE FROM category WHERE code = #{code}
    </delete>
</mapper>
